# MongoDB Configuration (Optional - for persistence)
# Default connection string for local Docker Compose setup
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=apikeyrouter
MONGODB_ENABLED=false

# Redis Configuration (Optional - for distributed state)
# Default connection string for local Docker Compose setup
# Uncomment redis service in docker-compose.yml to use
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Proxy Configuration
PROXY_HOST=0.0.0.0
PROXY_PORT=8000
PROXY_RELOAD=false  # Set to true for development

# Management API
# Generate a secure random key for production use
MANAGEMENT_API_KEY=your-management-key-here
MANAGEMENT_API_ENABLED=true

# Observability
LOG_LEVEL=INFO
METRICS_ENABLED=true

# Provider API Keys
# Note: API keys are managed through the library API, not environment variables
# Register keys via the management API after deployment
APIKEYROUTER_ENCRYPTION_KEY=my-secure-password-123